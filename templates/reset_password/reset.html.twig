{% extends 'layout/base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block stylesheets %}
    <style>
        .form-container {
            max-width: 450px;
            margin: 3rem auto;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            background-color: #fff;
        }

        .form-title {
            margin-bottom: 1.5rem;
            text-align: center;
            color: #2c3e50;
        }

        .form-floating {
            margin-bottom: 1rem;
        }

        .btn-submit {
            padding: 0.75rem;
            font-weight: 600;
            width: 100%;
            margin-top: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="form-container">
                    <h2 class="form-title">Create New Password</h2>

                    {{ form_start(resetForm) }}
                    <div class="form-floating">
                        {{ form_widget(resetForm.plainPassword.first, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'New password',
                                'autocomplete': 'new-password'
                            }
                        }) }}
                        <label for="{{ resetForm.plainPassword.first.vars.id }}">
                            <i class="fas fa-lock me-2"></i>New password
                        </label>
                        {{ form_errors(resetForm.plainPassword.first) }}
                    </div>

                    <div class="form-floating">
                        {{ form_widget(resetForm.plainPassword.second, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Confirm password',
                                'autocomplete': 'new-password'
                            }
                        }) }}
                        <label for="{{ resetForm.plainPassword.second.vars.id }}">
                            <i class="fas fa-lock me-2"></i>Confirm password
                        </label>
                        {{ form_errors(resetForm.plainPassword.second) }}
                    </div>

                    <button type="submit" class="btn btn-primary btn-submit">
                        <i class="fas fa-check-circle me-2"></i>Reset password
                    </button>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
