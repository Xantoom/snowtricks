{% extends 'layout/base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block stylesheets %}
    <style>
        .form-container {
            max-width: 450px;
            margin: 3rem auto;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            background-color: #fff;
        }

        .form-title {
            margin-bottom: 1.5rem;
            text-align: center;
            color: #2c3e50;
        }

        .form-floating {
            margin-bottom: 1rem;
        }

        .btn-submit {
            padding: 0.75rem;
            font-weight: 600;
            width: 100%;
            margin-top: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="form-container">
                    <h2 class="form-title">Reset Password</h2>

                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>{{ flash_error }}
                        </div>
                    {% endfor %}

                    <p class="text-center mb-4">
                        <i class="fas fa-info-circle me-2"></i>Enter your email address and we'll send you a link to reset your password.
                    </p>

                    {{ form_start(requestForm) }}
                    <div class="form-floating">
                        {{ form_widget(requestForm.email, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Email address',
                                'autocomplete': 'email'
                            }
                        }) }}
                        <label for="{{ requestForm.email.vars.id }}">
                            <i class="fas fa-envelope me-2"></i>Email address
                        </label>
                        {{ form_errors(requestForm.email) }}
                    </div>

                    <button type="submit" class="btn btn-primary btn-submit">
                        <i class="fas fa-paper-plane me-2"></i>Send reset link
                    </button>

                    <div class="text-center mt-4">
                        <a href="{{ path('app_login') }}" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-2"></i>Back to login
                        </a>
                    </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
