{% extends 'layout/base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block stylesheets %}
    <style>
        .message-container {
            max-width: 450px;
            margin: 3rem auto;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            background-color: #fff;
        }

        .message-title {
            margin-bottom: 1.5rem;
            text-align: center;
            color: #2c3e50;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="message-container">
                    <div class="text-center mb-4">
                        <i class="fas fa-envelope fa-3x text-primary"></i>
                    </div>

                    <h2 class="message-title">Email Sent</h2>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>If an account matching your email exists, we've sent you a password reset link that will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                    </div>

                    <p class="text-center mb-4">
                        If you don't receive an email, please check your spam folder or
                        <a href="{{ path('app_reset_password_request') }}" class="text-decoration-none">try again</a>.
                    </p>

                    <div class="text-center mt-4">
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Return to login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
