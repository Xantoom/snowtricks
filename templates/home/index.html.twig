{% extends 'layout/base.html.twig' %}

{% block javascripts %}
	{{ importmap('load-more') }}
{% endblock %}

{% block title %}Home{% endblock %}

{% block body %}
	<!-- Banner -->
	<div class="banner position-relative">
		<img src="{{ bannerImgLink }}" width="100%" alt="Snowboard banner" class="img-fluid rounded" style="max-height: 300px; object-fit: cover; object-position: 0 50%;">
		<h1 class="banner-text position-absolute top-50 start-50 translate-middle text-white">
			Welcome to the SnowTricks Community
		</h1>
	</div>

	<!-- Cards -->
	<div class="container my-3" style="max-width: 1400px;">
		<div class="row row-cols-1 row-cols-md-2 row-cols-xl-5 g-4 justify-content-center tricks-container">
			{% for trick in tricks %}
				{{ include('home/_trick_card.html.twig', { trick: trick }) }}
			{% endfor %}
		</div>
	</div>

	<!-- Load More Button -->
	{% if nbTricks > 15 %}
		<div class="container text-center mb-3">
			<button class="btn btn-primary btn-lg btn-load-more" data-page="2">Load More</button>
		</div>
	{% endif %}
{% endblock %}
